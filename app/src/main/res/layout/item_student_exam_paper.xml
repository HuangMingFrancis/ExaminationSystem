<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroud_accout_item"
        android:padding="8dp">


        <TextView
            android:id="@+id/tv_exam_publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16/03/16 20：01"
            android:textSize="12sp"/>

        <TextView

            android:id="@+id/tv_exam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exam_publishTime"
            android:layout_marginTop="14dp"
            android:maxLines="1"
            android:text="121321654"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_exam_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exam_title"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorNormalText"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:text="截至：16/04/16 23：59"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_exam_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exam_endTime"
            android:layout_marginTop="16dp"
            android:maxLines="5"
            android:text="flskdjflksdf"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>